<h2>Edit <% @flat.name %></h2>

<%= form_with model: @flat do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :price_per_night %>
  <%= f.text_field :price_per_night %>
  <%= f.label :number_of_guests %>
  <%= f.text_field :number_of_guests %>
  <%= f.submit %>
<% end %>
